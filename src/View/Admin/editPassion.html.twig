{% extends 'layout.html.twig' %}

{% block title %}Modifier une passion{% endblock %}
{% block description %}modifier une course du site{% endblock %}

{% block user %}
    {% include('Admin/logout.html.twig') %}
{% endblock %}

{% block content %}

    <div class="row mt-5">
        <div class="col-md-6 pt-2 section-title">
            <h2 class="bg-black"><b class="font-weight-bold">Modifier une course</b></h2>
        </div>
    </div>
    <div class="row">
        <div class="col card border-light mb-3 bg-pink">
            <div class="card-body text-dark">
                <form action="/admin/edit-passion/{{ passion.id }}" method="post">
                    <div class="row mt-3">
                        <div class="form-group col-md-8 offset-md-2">
                            <input type="text" class="form-control" name="runningName" placeholder="Course *" required
                                   value="{{ passion.name }}">
                            <small class="text-danger">{{ errors['runningName'] ?: errors['runningName'] }}</small>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="form-group col-md-2 offset-md-3">
                            <input type="number" class="form-control" name="rank"  placeholder="Classement *" min="1" required
                                   value="{{ passion.rank }}">
                            <small class="text-danger">{{ errors['rank'] ?: errors['rank'] }}</small>
                        </div>
                        <div class="form-group col-md-2">
                            <input type="number" class="form-control" name="participants"  placeholder="Participants *" min="1" required
                                   value="{{ passion.participants }}">
                            <small class="text-danger">{{ errors['participants'] ?: errors['participants'] }}</small>
                        </div>
                        <div class="form-group col-md-2">
                            <input type="number" class="form-control" name="distance"  placeholder="Distance *" min="1" required
                                   value="{{ passion.distance }}">
                            <small class="text-danger">{{ errors['distance'] ?: errors['distance'] }}</small>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="form-group col-md-4 offset-md-2">
                            <label>Temps</label>
                            <input type="time" class="form-control" name="runningTime" placeholder="Temps *" step='1' min="00:00:00" required
                                   value="{{ passion.running_time }}">
                            <small class="text-danger">{{ errors['runningTime'] ?: errors['runningTime'] }}</small>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Date</label>
                            <input type="date" class="form-control" name="dateRunning" placeholder="Date *" required
                                   value="{{ passion.date }}">
                            <small class="text-danger">{{ errors['dateRunning'] ?: errors['dateRunning'] }}</small>
                        </div>
                    </div>
                    <a class="btn btn-danger mt-4" href="/admin">Retour</a>
                    <input class="btn btn-dark bg-black mt-4" type="submit" value="Modifier">
                </form>
            </div>
        </div>
    </div>

{% endblock %}


