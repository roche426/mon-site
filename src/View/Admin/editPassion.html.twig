{% extends 'layout.html.twig' %}

{% block description %}modifier une passion{% endblock %}

{% block user %}
    {% include('Admin/logout.html.twig') %}
{% endblock %}

{% block content %}

    <div class="row mt-5">
        <div class="col-md-6 pt-2 section-title">
            <h2 class="bg-black"><b class="font-weight-bold">Modifier une course</b></h2>
        </div>
    </div>
    <div class="row">
        <div class="col card border-light mb-3 bg-pink">
            <div class="card-body text-dark">
                <form action="/admin/edit-passion/{{ passion.id }}" method="post">
                    <div class="row mt-3">
                        <div class="form-group col-md-8 offset-md-2">
                            <input type="text" class="form-control" name="runningName" value="{{ passion.name }}"/>
                            {% if inputValue['runningName'] is defined and inputValue['runningName'] is empty %}
                                <small class="text-danger">Ce champs ne doit pas être vide</small>
                            {% endif %}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="form-group col-md-2 offset-md-3">
                            <input type="number" class="form-control" name="rank" min="0" value="{{ passion.rank }}"/>
                            {% if inputValue['rank'] is defined and inputValue['rank'] is empty %}
                                <small class="text-danger">Ce champs ne doit pas être vide</small>
                            {% endif %}
                        </div>
                        <div class="form-group col-md-2">
                            <input type="number" class="form-control" name="participants" min="0" value="{{ passion.participants }}"/>
                            {% if inputValue['participants'] is defined and inputValue['participants'] is empty %}
                                <small class="text-danger">Ce champs ne doit pas être vide</small>
                            {% endif %}
                        </div>
                        <div class="form-group col-md-2">
                            <input type="number" class="form-control" name="distance" min="0" value="{{ passion.distance }}"/>
                            {% if inputValue['distance'] is defined and inputValue['distance'] is empty %}
                                <small class="text-danger">Ce champs ne doit pas être vide</small>
                            {% endif %}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="form-group col-md-4 offset-md-2">
                            <label>Temps</label>
                            <input type="time" class="form-control" name="runningTime" value="{{ passion.running_time }}" step='1' min="00:00:00"/>
                            {% if inputValue['runningTime'] is defined and inputValue['runningTime'] is empty %}
                                <small class="text-danger">Ce champs ne doit pas être vide</small>
                            {% endif %}
                        </div>
                        <div class="form-group col-md-4">
                            <label>Date</label>
                            <input type="date" class="form-control" name="dateRunning" value="{{ passion.date }}"/>
                            {% if inputValue['dateRunning'] is defined and inputValue['dateRunning'] is empty %}
                                <small class="text-danger">Ce champs ne doit pas être vide</small>
                            {% endif %}
                        </div>
                    </div>
                    <a class="btn btn-danger mt-4" href="/admin">Retour</a>
                    <input class="btn btn-dark bg-black mt-4" type="submit" value="Modifier">
                </form>
            </div>
        </div>
    </div>

{% endblock %}


