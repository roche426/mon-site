{% extends 'layout.html.twig' %}

{% block contentAdmin %}
    <a href="/logout">logout</a>
{{ test }}
<div class="col-md-12 card border-light mt-3">
    <div class="card-body text-dark">
        <h2 class="my-4 bg-black"><b class="font-weight-bold">Message reçu</b></h2>
        <div class="card border-light mb-3 bg-pink">
            <div class="card-body text-dark">
                <table class="table">
                    {% if contacts %}
                    <thead>
                    <tr>
                        <th scope="col" class="text-center" >Date</th>
                        <th scope="col" class="text-center" >Expéditeur</th>
                        <th scope="col" class="text-center" >Contact</th>
                        <th scope="col" class="text-center" >Message</th>
                        <th scope="col" class="text-center" ></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for contact in contacts %}
                    <tr>
                        <td class="text-center">31 janvier 2018</td>
                        <td class="text-center">{{ contact.firstname }} {{ contact.lastname }}</td>
                        <td class="text-center">{{ contact.email }} / {{ contact.phone }}</td>
                        <td class="text-center">{{ contact.message }}</td>
                        <td class="text-center">x</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    {% else %}
                        <h5>Aucun nouveau message</h5>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
