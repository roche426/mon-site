{% extends 'layout.html.twig' %}

{% block title %}Connection{% endblock %}
{% block description %}Se connecter Ã  l'administration{% endblock %}

{% block content %}
    <div class="col-md-12 card border-light mt-5">
        <div class="card-body text-dark my-5">
            <h2 class="my-4 mx-5 bg-black py-2"><b class="font-weight-bold">Administration</b></h2>
            <p class="text-danger">{{ connexionError ?: connexionError }}</p>
            <form action="/connexion" method="post">
                <div class="row my-5">
                    <div class="form-group col-md-6 offset-md-3">
                        <input type="text" class="form-control" name="email" placeholder="Email *"
                               value="{{ formValue['email'] ?: formValue['email'] }}">
                        <small class="text-danger">{{ errors['email'] ?: errors['email'] }}</small>
                    </div>
                </div>
                <div class="row my-5">
                    <div class="form-group col-md-6 offset-md-3">
                        <input type="password" class="form-control" name="password" placeholder="Mot de passe *">
                        <small class="text-danger">{{ errors['password'] ?: errors['password'] }}</small>
                    </div>
                </div>
                <input class="btn btn-dark bg-black mt-2" type="submit" value="Valider">
            </form>
        </div>
    </div>
{% endblock %}
