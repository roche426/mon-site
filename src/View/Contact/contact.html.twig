{% extends 'layout.html.twig' %}

{% block description %}Vous pouvez me contacter par mail sur cette page pour plus d'informations{% endblock %}
{% block title %}Contact{% endblock %}
{% block socialMeta %}
    <meta property="og:title" content="Aurélien Roche - Contact" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://www.aurelien-roche.fr/contact" />
    <meta property="og:image:url" content="http://www.aurelien-roche.fr/assets/images/cv.jpg" />
{% endblock %}

{% block content %}

    <div class="row mb-5 mt-5">
        <div class="col-md-6 pt-2 section-title">
            <h2 class="bg-black"><b class="font-weight-bold">Contact</b></h2>
        </div>
        <div class="card border-light mb-3 bg-pink">
            <div class=" card-body text-dark">
                <h5 class="my-4 mx-5">Je suis actuellement <b class="font-weight-bold">en CDI</b> mais si vous souhaitez avoir plus d'informations,
                    <b class="font-weight-bold">n'hésitez pas à me contacter.</b>
                </h5>
                <form action="/contact" method="post">
                    <div class="row mt-3">
                        <div class="form-group col-md-4 offset-md-2">
                            <input type="text" class="form-control" name="firstName" placeholder="Prénom *"
                                   value="{{ formValue['firstName'] ?: formValue['firstName'] }}">
                            <small class="text-danger">{{ errors['firstName'] ?: errors['firstName'] }}</small>
                        </div>
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" name="lastName" placeholder="Nom *"
                                   value="{{ formValue['lastName'] ?: formValue['lastName'] }}">
                            <small class="text-danger">{{ errors['lastName'] ?: errors['lastName'] }}</small>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="form-group col-md-4 offset-md-2">
                            <input type="email" class="form-control" name="mail" placeholder="Email *"
                                   value="{{ formValue['mail'] ?: formValue['mail'] }}">
                            <small class="text-danger">{{ errors['mail'] ?: errors['mail'] }}</small>
                        </div>
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" name="phoneNumber" placeholder="Téléphone"
                                   value="{{ formValue['phoneNumber'] ?: formValue['phoneNumber'] }}">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="form-group col-md-8 offset-md-2">
                            <textarea class="form-control" rows="5" placeholder="Votre message *" name="message">
                                {{ formValue['message'] ?: formValue['message'] }}
                            </textarea>
                            <small class="text-danger">{{ errors['message'] ?: errors['message'] }}</small>
                        </div>
                    </div>
               <!--     <small class="text-danger">{{ errors['recaptcha'] ?: errors['recaptcha'] }}</small>
                    <div class="g-recaptcha mt-3" data-sitekey="6Lf6sHMUAAAAAHPHZLQuv_ZadwdwvhcT0sB2rwt5"></div>-->
                    <input class="btn btn-dark bg-black mt-4" type="submit" value="Envoyer">
                </form>
            </div>
        </div>
    </div>

{% endblock %}


